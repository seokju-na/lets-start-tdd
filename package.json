{
  "name": "testing-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "init": "npm install && npm run update-driver",
    "update-driver": "./node_modules/webdriver-manager/bin/webdriver-manager update",
    "update-driver:chrome": "./node_modules/webdriver-manager/bin/webdriver-manager update --chrome",
    "test": "npm run start & ./node_modules/karma/bin/karma start karma.config.js --single-run --browsers PhantomJS && npm run test:e2e:firefox",
    "test:unit": "./node_modules/karma/bin/karma start karma.config.js",
    "test:e2e:chrome": "./node_modules/nightwatch/bin/nightwatch --env chrome",
    "test:e2e:firefox": "./node_modules/nightwatch/bin/nightwatch --env firefox",
    "test:e2e:safari": "./node_modules/nightwatch/bin/nightwatch --env safari",
    "start": "./node_modules/gulp/bin/gulp.js",
    "build": "./node_modules/gulp/bin/gulp.js build:production",
    "deploy": "npm run build && ./node_modules/surge/lib/cli.js -p build/ -d seokju-todo-app.surge.sh"
  },
  "author": "seokju-na",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.0.1",
    "browserify-istanbul": "^2.0.0",
    "bulkify": "^1.4.0",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-connect": "^4.1.0",
    "gulp-less": "^3.1.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-uglify": "^1.5.4",
    "jasmine-core": "^2.4.1",
    "karma": "^1.1.0",
    "karma-browserify": "^5.0.5",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.4",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-source-map-support": "^1.1.0",
    "less-plugin-autoprefix": "^1.5.1",
    "mocha": "^2.5.3",
    "nightwatch": "^0.9.5",
    "protractor": "^3.3.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0",
    "webdriver-manager": "10.1.0"
  },
  "dependencies": {
    "bulk-require": "^1.0.0",
    "lodash": "^4.13.1",
    "surge": "^0.18.0"
  }
}
